<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConocenosActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿DÓNDE ESTAMOS?"
        android:textAlignment="center"
        android:textColor="#7147BA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:translationY="20dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationY="50dp"
        app:srcCompat="@drawable/mapa" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VISÍTANOS EN"
        android:textAlignment="center"
        android:textColor="#ED5C8D"
        android:textSize="16sp"
        android:textStyle="bold"
        android:translationY="70dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="313dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:text="Av Hidalgo 675, Primero de Cobián Centro, 27000 Torreón, Coah."
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="16sp"
        android:translationY="90dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lunes a Viernes 8:00 AM - 7:00 PM"
        android:textAlignment="center"
        android:textColor="#3B4CA8"
        android:textStyle="bold"
        android:translationY="120dp" />

</LinearLayout>